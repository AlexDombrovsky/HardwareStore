@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<div class="header-area">
    <div class="container">
        <div class="row">
            <div class="user-menu">
                <ul>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li>@User.Identity.Name</li>
                        <li><a asp-controller="Account" asp-action="Logout"><i class="fa fa-user"></i>Выход</a></li>
                    }
                    else
                    {
                        <li><a asp-controller="Account" asp-action="Register"><i class="fa fa-user"></i>Регистрация</a></li>
                        <li><a asp-controller="Account" asp-action="Login"><i class="fa fa-user"></i>Вход</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>