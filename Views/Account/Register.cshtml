@model HardwareStore.Models.User.UserRegistrationViewModel

<div class="product-big-title-area">
    <div class="product-bit-title text-center">
        <h2>Регистрация</h2>
    </div>
</div>

<div class="single-product-area">
    <div class="container">
        <form class="col-md-9" asp-action="Register" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="Email">E-mail</label>
                    <input asp-for="Email" type="text" class="form-control" placeholder="E-mail">
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="Password">Пароль</label>
                    <input asp-for="Password" type="password" class="form-control">
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="PasswordConfirm">Подтвердите пароль</label>
                    <input asp-for="PasswordConfirm" type="password" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <button type="submit">Зарегистрироваться</button>
            </div>
        </form>
    </div>
</div>